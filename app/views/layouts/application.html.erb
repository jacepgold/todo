<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      * {
        box-sizing: border-box;
      }
      a {
        font-size: 1.25em;
        font-weight: bold;
      }
      header {
        background-color: purple;
        color: white;
        text-align: center;
        padding: 1em;
      }
      header h1 {
        text-align: center;
      }
      header h1 a {
        color: white;
      }
      header h1 a:visited {
        color: white;
      }
      header h1 a:hover {
        color: lightblue;
      }
      .center {
        text-align: center;
        margin: 0 auto;
      }
      .underline {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <header>
      <h1><%= link_to "Jace's Todo List... On Rails!", root_path %></h1>
    </header>
    <hr />
    <%= yield %>
  </body>
</html>
