<h1 class="underline">New Task</h1>
<hr />
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title, required: true, placeholder: 'Task Title' %>
  <br />
  <br />
  <%= f.label :description %>
  <br />
  <%= f.text_area :description, required: true, placeholder: 'Task Description' %>
  <br />
  <%= f.submit %>
<% end %>

<br />

<%= link_to 'View Tasks', tasks_path %>
